<Window x:Class="test_demo_exam_04.Authorization.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_demo_exam_04.Authorization"
        mc:Ignorable="d"
        Title="Captcha" Height="auto" Width="auto" Icon="/Resources/minilogo.png" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Style="{StaticResource StackPanelMS}" Orientation="Vertical">
            <TextBlock x:Name="lbCaptcha" Text="" Style="{StaticResource TextBlockMS}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="tbCaptcha" Style="{StaticResource TextBoxMS}"/>
            <Button x:Name="btnSend" Style="{StaticResource ButtonMS}" Content="Send" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
